<!DOCTYPE html>
<html>
<head>
	<title><%= BlgConfig[:title] %></title>
	<%= stylesheet_link_tag 'default', 'coderay' %>
	<%= javascript_include_tag 'lib/jquery', 'lib/rails' %>
	<%= csrf_meta_tag %>
</head>
<body>
	<div id="page">
		<div id="header">
			<h1><%= link_to BlgConfig[:title], root_path %></h1>
		</div>
		<div id="main">
			<% if flash[:notice] %>
				<div class="notice"><%= flash[:notice] %></div>
			<% end %>
			
			<% if flash[:alert] %>
				<div class="alert"><%= flash[:alert] %></div>
			<% end %>
			
			<%= yield %>
			<%= link_to('Logout', logout_path) if logged_in? %>
		</div>
	</div>
</body>
</html>
