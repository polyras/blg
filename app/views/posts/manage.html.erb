<div class="manage_posts">
	<p><%= link_to 'Create new post', new_post_path %></p>
	<% if @posts.any? %>
		<table>
			<thead>
				<tr>
					<th>Title</th>
					<th>Content</th>
					<th>Published</th>
					<th>&nbsp;</th>
				</tr>
			</thead>
			<tbody>
				<% for post in @posts %>
					<tr>
						<td><%= link_to_post post %></td>
						<td><%= truncate post.content %></td>
						<td><%= post.published? ? 'Yes' : 'No' %></td>
						<td class="actions"><%= link_to_edit_post post %> | <%= link_to_delete_post post %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	<% else %>
		<p>No posts found.</p>
	<% end %>
</div>
