<%= form_for @post do |f| %>
	<p>
		<%= f.label :title %><br />
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :excerpt %><br />
		<%= f.text_area :excerpt %>
	</p>
	
	<p>
		<%= f.label :content %><br />
		<%= f.text_area :content %>
	</p>
	
	<p>
		<%= f.check_box :published %>
		<%= f.label :published %>
	</p>
	
	<p>
		<%= f.submit %>
	</p>
<% end %>
